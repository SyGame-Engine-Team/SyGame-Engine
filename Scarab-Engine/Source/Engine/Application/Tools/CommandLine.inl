// CommandLine implementation
inline const GChar * CommandLine::GetProgramName() const {
    return m_strProgName;
}

inline UInt CommandLine::GetOptionCount() const {
    return m_iOptionCount;
}

inline const GChar * CommandLine::GetName( UInt iOption ) const {
    Assert( iOption < m_iOptionCount );
    return m_arrOptions[iOption].strName;
}
inline UInt CommandLine::GetArgCount( UInt iOption ) const {
    Assert( iOption < m_iOptionCount );
    return m_arrOptions[iOption].iArgCount;
}
