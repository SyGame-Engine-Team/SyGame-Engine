/////////////////////////////////////////////////////////////////////////////////
// GUIBackboardModel implementation
inline Bool GUIBackboardModel::HasContextMenu() const {
    return ( m_pContextMenuModel != NULL );
}
inline GUIMenuModel * GUIBackboardModel::GetContextMenu() const {
    return m_pContextMenuModel;
}

/////////////////////////////////////////////////////////////////////////////////

inline GUIBackboard * GUIBackboardModel::_GetBackboard() const {
    return (GUIBackboard*)m_pEventProcessor;
}

inline Void GUIBackboardModel::_SetBackboard( GUIBackboard * pBackboard ) {
    m_pEventProcessor = pBackboard;
}

/////////////////////////////////////////////////////////////////////////////////
// GUIBackboard implementation
inline const Rectangle2 & GUIBackboard::GetScreenRect() const {
    return m_rectScreen;
}

/////////////////////////////////////////////////////////////////////////////////

inline Void GUIBackboard::_ToLocalCoords( Point2 * outLocalPos, const Point2 & ptScreenPos ) const {
    *outLocalPos = ptScreenPos;
}
