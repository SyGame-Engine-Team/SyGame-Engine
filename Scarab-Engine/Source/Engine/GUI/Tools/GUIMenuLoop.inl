// GUIMenuLoop implementation
inline Bool GUIMenuLoop::IsActive() const {
    return ( m_iLoopState == GUIMENU_STATE_LOOP );
}
inline Bool GUIMenuLoop::IsZombie() const {
    return ( m_iLoopState == GUIMENU_STATE_ZOMBIE );
}

inline GUIMenu * GUIMenuLoop::GetRootMenu() const {
    return m_pRootMenu;
}
