// GUIMsgBoxButtonModel implementation
inline Void GUIMsgBoxButtonModel::SetResult( GUIMessageBoxResult iResult ) {
    m_iResult = iResult;
}
inline Void GUIMsgBoxButtonModel::SetCallback( GUIMsgBoxCallback pfCallback, Void * pUserData ) {
    m_pfCallback = pfCallback;
    m_pfDialogCallback = NULL;
    m_pUserData = pUserData;
}
inline Void GUIMsgBoxButtonModel::SetCallback( GUIMsgBoxDialogCallback pfDialogCallback, Void * pUserData ) {
    m_pfCallback = NULL;
    m_pfDialogCallback = pfDialogCallback;
    m_pUserData = pUserData;
}

