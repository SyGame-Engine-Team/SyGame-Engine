// GUITimerEvents implementation
inline UInt GUITimerEvents::GetTimerCount() const {
    return m_iTimerCount;
}
inline const GUITimer * GUITimerEvents::GetTimer( UInt iTimerID ) const {
    Assert( iTimerID < m_iTimerCount );
    return ( m_arrTimers + iTimerID );
}
inline GUITimer * GUITimerEvents::GetTimer( UInt iTimerID ) {
    Assert( iTimerID < m_iTimerCount );
    return ( m_arrTimers + iTimerID );
}

