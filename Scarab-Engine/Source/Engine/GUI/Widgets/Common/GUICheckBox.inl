/////////////////////////////////////////////////////////////////////////////////
// GUICheckBoxModel implementation
inline Bool GUICheckBoxModel::IsCleared() const {
    return (m_iState == GUICHECKBOX_CLEARED);
}
inline Bool GUICheckBoxModel::IsTicked() const {
    return (m_iState == GUICHECKBOX_TICKED);
}
inline Bool GUICheckBoxModel::IsNeutral() const {
    Assert( m_bUseThirdState );
    return (m_iState == GUICHECKBOX_NEUTRAL);
}

/////////////////////////////////////////////////////////////////////////////////
// GUICheckBox implementation
inline GUIWidgetType GUICheckBox::GetType() const {
    return GUIWIDGET_CHECKBOX;
}
