// MeshSphere implementation
inline const Sphere & MeshSphere::GetGeometry() const {
    return m_vSphere;
}

inline UInt MeshSphere::GetSliceSamples() const {
    return m_iSliceSamples;
}
inline UInt MeshSphere::GetRadialSamples() const {
    return m_iRadialSamples;
}

inline Bool MeshSphere::IsInterior() const {
    return m_bInterior;
}

inline Void MeshSphere::UpdateGeometry( const Sphere & vSphere, GPUDeferredContext * pContext ) {
    m_vSphere = vSphere;
    _Update( pContext );
}

