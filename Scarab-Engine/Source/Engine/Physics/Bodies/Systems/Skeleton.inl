// Skeleton implementation
inline SystemBodyType Skeleton::GetType() const {
    return SYSTEMBODY_SKELETON;
}

inline IKBone * Skeleton::GetRootBone() const {
    return m_pRootBone;
}

inline UInt Skeleton::GetGoalCount() const {
    return m_iGoalCount;
}
inline IKGoal * Skeleton::GetGoal( UInt iGoal ) const {
    Assert( iGoal < m_iGoalCount );
    return m_arrGoals[iGoal];
}


