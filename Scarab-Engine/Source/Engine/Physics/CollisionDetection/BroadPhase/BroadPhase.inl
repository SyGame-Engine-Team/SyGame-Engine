// BroadPhase implementation
inline Void BroadPhase::Commit() {
    m_pPairManager->Commit();
}

inline Void BroadPhase::SwitchListener( PairListener * pPairListener ) {
    m_pPairManager->SwitchListener( pPairListener );
}

inline Bool BroadPhase::IsPair( IslandNode * pNodeA, IslandNode * pNodeB ) const {
    return m_pPairManager->IsPair( pNodeA, pNodeB );
}


