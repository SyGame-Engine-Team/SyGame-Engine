// JointGear implementation
inline JointConstraintType JointGear::GetType() const {
    return JOINT_GEAR;
}

inline Scalar JointGear::GetRatio() const {
    return m_fRatio;
}
inline Void JointGear::SetRatio( Scalar fRatio ) {
    Assert( fRatio > 0.0f );
    m_fRatio = fRatio;
}
