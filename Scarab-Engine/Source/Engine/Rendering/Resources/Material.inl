// Material implementation
inline Material & Material::operator=( const Material & rhs ) {
    Emissive = rhs.Emissive;
    Ambient = rhs.Ambient;
    Diffuse = rhs.Diffuse;
    Specular = rhs.Specular;
    return (*this);
}
