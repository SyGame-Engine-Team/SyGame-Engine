// WorldSwitchNode implementation
inline WorldNodeType WorldSwitchNode::GetType() const {
    return WORLDNODE_SWITCH;
}

inline const GChar * WorldSwitchNode::GetActiveChild() const {
    return m_strActiveChild;
}
inline Void WorldSwitchNode::SetActiveChild( const GChar * strName ) {
    Assert( (strName != NULL) && HasChild(strName) );
    m_strActiveChild = strName;
}
inline Void WorldSwitchNode::Disable() {
    m_strActiveChild = NULL;
}

