// WorldConvexRoom implementation
inline WorldNodeType WorldConvexRoom::GetType() const {
    return WORLDNODE_INDOOR_CONVEXROOM;
}

inline UInt WorldConvexRoom::GetPortalCount() const {
    return m_iPortalCount;
}
inline WorldPortal * WorldConvexRoom::GetPortal( UInt iPortal ) const {
    Assert( iPortal < m_iPortalCount );
    return m_arrPortals[iPortal];
}

