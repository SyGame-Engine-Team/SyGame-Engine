// SimpleEntity implementation
inline Vertex3 SimpleEntity::GetPosition() const {
    const Vector3 & vPos = WorldTransform.GetTranslate();
    return Vertex3( vPos.X, vPos.Y, vPos.Z );
}

inline Void SimpleEntity::SetVisible( Bool bVisible ) {
    if ( bVisible )
        CullMode = WORLD_CULL_DYNAMIC;
    else
        CullMode = WORLD_CULL_ALLWAYS;
}

inline Scalar SimpleEntity::GetDistance( SimpleEntity * pEntity ) const {
    Vector3 vW = ( pEntity->GetPosition() - GetPosition() );
    return vW.Norm();
}
