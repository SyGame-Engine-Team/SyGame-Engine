// EntityManager implementation
inline const GChar * EntityManager::GetName() {
    return TEXT("EntityManager");
}
inline const GChar * EntityManager::GetMemoryBudget() {
    return TEXT (
"Heap:Scratch(4194304);"
    );
}

inline SimpleEntity * EntityManager::GetEntity( const GChar * strName ) const {
    _EntityMap::Iterator itEntity = m_hEntityMap.Get( strName );
    if ( itEntity.IsNull() )
        return NULL;
    return itEntity.GetItem();
}

