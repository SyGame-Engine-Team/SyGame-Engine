// MageTalentTree implementation
inline const GChar * MageTalentTree::GetBranchName( UInt iBranch ) const {
    switch( iBranch ) {
        case 0: return TEXT("Fire");
        case 1: return TEXT("Ice");
        case 2: return TEXT("Arcane");
        default: Assert(false); return NULL; break;
    }
}

