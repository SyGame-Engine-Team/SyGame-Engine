// InventoryViewModel implementation
inline InventoryBagID InventoryViewModel::GetCurrentBag() const {
    return m_idCurrentBag;
}
inline Void InventoryViewModel::SetCurrentBag( InventoryBagID idBag ) {
    Assert( idBag < INVENTORYBAGID_COUNT );
    m_idCurrentBag = idBag;
}

inline ItemInstance * InventoryViewModel::GetItem( EquipmentSoltID idEquipSlot ) const {
    return m_pCharacter->GetItem( idEquipSlot );
}
inline ItemInstance * InventoryViewModel::GetItem( UInt iSlot ) const {
    return m_pCharacter->GetItem( m_idCurrentBag, iSlot );
}

