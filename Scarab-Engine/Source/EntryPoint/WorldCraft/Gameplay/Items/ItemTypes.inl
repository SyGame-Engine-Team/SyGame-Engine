// EquipmentItem implementation
inline Bool EquipmentItem::IsArmor() const {
    return ( ITEMCLASS_HEAD <= m_iClass && m_iClass <= ITEMCLASS_FEET );
}
inline Bool EquipmentItem::IsAccessory() const {
    return ( ITEMCLASS_NECK <= m_iClass && m_iClass <= ITEMCLASS_TRINKET );
}
inline Bool EquipmentItem::IsTool() const {
    return ( ITEMCLASS_TOOL_RIGHT <= m_iClass && m_iClass <= ITEMCLASS_TOOL_DISTANCE );
}
inline Bool EquipmentItem::IsWeapon() const {
    return ( ITEMCLASS_WEAPON_RIGHT <= m_iClass && m_iClass <= ITEMCLASS_WEAPON_DISTANCE );
}

inline const Scalar * EquipmentItem::GetStatBonus() const {
    return m_arrStatBonus;
}

