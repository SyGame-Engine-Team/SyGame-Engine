// StaticData implementation
template<typename T>
StaticData<T>::StaticData()
{
    m_iInstanceCounter = 0;
}
template<typename T>
StaticData<T>::~StaticData()
{
    // nothing to do
}

template<typename T>
inline Void StaticData<T>::OnNewInstance() {
    if (m_iInstanceCounter == 0)
        T::StaticInitialize();
    ++m_iInstanceCounter;
}
template<typename T>
inline Void StaticData<T>::OnDeleteInstance() {
    Assert(m_iInstanceCounter > 0);
    --m_iInstanceCounter;
    if (m_iInstanceCounter == 0)
        T::StaticCleanup();
}
