/////////////////////////////////////////////////////////////////////////////////
// D2D1Geometry implementation
inline Bool D2D1Geometry::IsCreated() const {
    return ( m_pGeometry != NULL );
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1RectangleGeometry implementation
inline D2D1GeometryType D2D1RectangleGeometry::GetType() const {
    return D2D1GEOMETRY_RECTANGLE;
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1RoundedRectangleGeometry implementation
inline D2D1GeometryType D2D1RoundedRectangleGeometry::GetType() const {
    return D2D1GEOMETRY_ROUNDED_RECTANGLE;
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1EllipseGeometry implementation
inline D2D1GeometryType D2D1EllipseGeometry::GetType() const {
    return D2D1GEOMETRY_ELLIPSE;
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1PathGeometry implementation
inline D2D1GeometryType D2D1PathGeometry::GetType() const {
    return D2D1GEOMETRY_PATH;
}

inline Bool D2D1PathGeometry::IsOpened() const {
    DebugAssert( IsCreated() );
    return m_bOpened;
}
inline Bool D2D1PathGeometry::IsFigureInProgress() const {
    DebugAssert( IsCreated() );
    DebugAssert( IsOpened() );
    return m_bFigureInProgress;
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1TransformedGeometry implementation
inline D2D1GeometryType D2D1TransformedGeometry::GetType() const {
    return D2D1GEOMETRY_TRANSFORMED;
}

/////////////////////////////////////////////////////////////////////////////////
// D2D1GeometryGroup implementation
inline D2D1GeometryType D2D1GeometryGroup::GetType() const {
    return D2D1GEOMETRY_GROUP;
}


