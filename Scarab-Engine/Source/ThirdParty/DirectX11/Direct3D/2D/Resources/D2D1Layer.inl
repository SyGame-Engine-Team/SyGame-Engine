// D2D1Layer implementation
inline Bool D2D1Layer::IsCreated() const {
    return ( m_pLayer != NULL || m_bTemporaryDestroyed );
}

inline Float D2D1Layer::GetInitialDIPWidth() const {
    DebugAssert( IsCreated() );
    return m_hInitialDIPSize.width;
}
inline Float D2D1Layer::GetInitialDIPHeight() const {
    DebugAssert( IsCreated() );
    return m_hInitialDIPSize.height;
}
