// D2D1Mesh implementation
inline Bool D2D1Mesh::IsCreated() const {
    return ( m_pMesh != NULL || m_bTemporaryDestroyed );
}

inline Bool D2D1Mesh::IsOpened() const {
    DebugAssert( IsCreated() );
    return m_bOpened;
}

