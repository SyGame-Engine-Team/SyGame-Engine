/////////////////////////////////////////////////////////////////////////////////
// D3D11Buffer implementation
inline Bool D3D11Buffer::IsCreated() const {
    return ( m_pBuffer != NULL || m_bTemporaryDestroyed );
}
inline Void D3D11Buffer::UpdateDataSource( const Void * pData ) {
    m_hCreationParameters.pData = pData;
}

inline UInt D3D11Buffer::GetByteSize() const {
    return m_hBufferDesc.ByteWidth;
}
inline UInt D3D11Buffer::GetStride() const {
    return m_hBufferDesc.StructureByteStride;
}

/////////////////////////////////////////////////////////////////////////////////
// D3D11VertexBuffer implementation
inline D3D11ResourceType D3D11VertexBuffer::GetType() const {
    return D3D11RESOURCE_BUFFER_VERTEX;
}

/////////////////////////////////////////////////////////////////////////////////
// D3D11IndexBuffer implementation
inline D3D11ResourceType D3D11IndexBuffer::GetType() const {
    return D3D11RESOURCE_BUFFER_INDEX;
}

/////////////////////////////////////////////////////////////////////////////////
// D3D11ConstantBuffer implementation
inline D3D11ResourceType D3D11ConstantBuffer::GetType() const {
    return D3D11RESOURCE_BUFFER_CONSTANT;
}

/////////////////////////////////////////////////////////////////////////////////
// D3D11RawBuffer implementation
inline D3D11ResourceType D3D11RawBuffer::GetType() const {
    return D3D11RESOURCE_BUFFER_RAW;
}

/////////////////////////////////////////////////////////////////////////////////
// D3D11StructuredBuffer implementation
inline D3D11ResourceType D3D11StructuredBuffer::GetType() const {
    return D3D11RESOURCE_BUFFER_STRUCT;
}

