// D3D11InputLayout implementation
inline Bool D3D11InputLayout::IsFinalized() const {
    return m_bFinalized;
}

inline Bool D3D11InputLayout::IsCreated() const {
    return ( m_pInputLayout != NULL || m_bTemporaryDestroyed );
}

inline UInt D3D11InputLayout::GetFieldCount() const {
    return m_iFieldCount;
}
inline Void D3D11InputLayout::GetField( D3D11InputFieldDesc * outFieldDesc, UInt iField ) const {
    DebugAssert( m_bFinalized );
    DebugAssert( iField < m_iFieldCount );
    outFieldDesc->ConvertFrom( m_arrFields + iField );
}
